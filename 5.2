#include <iostream>
using namespace std;

class Rectangle {
private:
    int length;
    int breadth;

public:
   
    Rectangle() {
        length = 0;
        breadth = 0;
        cout << "Default constructor called." << endl;
    }

   
    Rectangle(int l) {
        length = l;
        breadth = l;
        cout << "Constructor with one parameter called." << endl;
    }

    Rectangle(int l, int b) {
        length = l;
        breadth = b;
        cout << "Constructor with two parameters called." << endl;
    }

    int area() {
        return length * breadth;
    }

    void display() {
        cout << "Length: " << length << ", Breadth: " << breadth 
             << ", Area: " << area() << endl;
    }
};

int main() {
    cout << "Demonstrating Constructor Overloading\n" << endl;

    Rectangle r1;          
    Rectangle r2(5);      
    Rectangle r3(4, 6);    

    cout << "\nRectangle Details:\n";
    r1.display();
    r2.display();
    r3.display();

    return 0;
}
