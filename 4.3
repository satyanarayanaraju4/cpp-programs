#include <iostream>
using namespace std;

class Box {
private:
    double length; 

public:
    Box(double l) {
        length = l;
    }

    
    friend void showLength(Box b);
};


void showLength(Box b) {
    
    cout << "Length of the box: " << b.length << endl;
}

int main() {
    Box box1(15.5);

    showLength(box1);

    return 0;
}
