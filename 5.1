#include <iostream>
using namespace std;

class Student {
private:
    string name;
    int rollNumber;

public:
    Student(string n, int r) {
        name = n;
        rollNumber = r;
        cout << "Constructor called: Object created for " << name << endl;
    }

    void display() {
        cout << "Student Name: " << name << endl;
        cout << "Roll Number: " << rollNumber << endl;
    }

    ~Student() {
        cout << "Destructor called: Object destroyed for " << name << endl;
    }
};

int main() {
    cout << "Creating Student Objects...\n" << endl;

    Student s1("Alice", 101);  
    Student s2("Bob", 102);   

    cout << "\nDisplaying Student Details:\n";
    s1.display();
    s2.display();

    cout << "\nEnd of main function.\n";
    return 0;
}
